<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
     android:id="@+id/ll_cajas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
<TextView
    android:id="@+id/tv_texta"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="25sp"
    android:text="@string/numa"

    />

        <EditText
            android:id="@+id/et_numa"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="Ingrese Num A"
            android:inputType="number"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_textb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="@string/num_b"

            />

        <EditText
            android:id="@+id/et_numb"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="Ingrese Num B"
            android:inputType="number"
            android:textSize="25sp" />
    </LinearLayout>
<LinearLayout
    android:layout_below="@+id/ll_cajas"
    android:id="@+id/ll_controles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <Button
    android:id="@+id/bt_suma"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/suma"/>
    <Button
        android:id="@+id/bt_resta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resta"/>
    <Button
        android:id="@+id/bt_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/multi"/>
    <Button
        android:id="@+id/bt_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/divi"/>
</LinearLayout>
<TextView
    android:id="@+id/tv_resultado"
    android:layout_below="@id/ll_controles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:text="0"
    android:textSize="30sp"
    android:layout_centerHorizontal="true"

    />



</RelativeLayout>